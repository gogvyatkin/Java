import java.util.Scanner;

public class Menu {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        boolean running = true;


        // выводит в консоль список пунктов меню пока не выбран выход из проги(пункт меню - 0. exit)
        while (running) {

            System.out.println("MENU");
            System.out.println("1. year");
            System.out.println("2. month");
            System.out.println("3. week");
            System.out.println("4. day");
            System.out.println("0. exit");
            System.out.print("select a period: ");

            int choice;
            try {
                choice = Integer.parseInt(scanner.nextLine().trim()); // получает данные от пользователя и засовывает
                                                                      // их в переменную
            } catch (NumberFormatException e) {
                System.out.println("error: enter the menu number");
                continue;
            }
            // выводит на экран рультат, при выборе соответствующего пункта меню
            switch (choice) {
                case 1:
                    System.out.println("data for the year");
                    break;
                case 2:
                    System.out.println("data for the month");
                    break;
                case 3:
                    System.out.println("data for the week");
                    break;
                case 4:
                    System.out.println("data for the day");
                    break;
                case 0:
                    System.out.println("Goodbye");
                    running = false;
                    break;
                default:
                    // выводит сообщение при выборе пункта меню не из интервала значений
                    System.out.println("Please select the menu item number from 0 to 4");
            }
        }

        scanner.close();
    }
}
